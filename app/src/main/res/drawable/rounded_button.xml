<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#66FF00" />
            <gradient android:angle="45" android:startColor="#006400" android:endColor="#66FF00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#66FF00" />
            <solid android:color="#66FF00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="80dip" />
            <stroke android:width="1dip" android:color="#018749" />
            <gradient android:angle="-90" android:startColor="#66FF00" android:centerColor="#17B169" android:endColor="#006400" />
        </shape>
    </item>
</selector>
